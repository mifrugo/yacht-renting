<% top_three = Location.last(3) %>
<div class="locations-container">
<h2 id="top-spots-content">Top spots for this week: </h2>
  <div class="row">
    <% top_three.each do |location| %>
      <div class="col-sm">
        <div class="card bg-light mb-3" >
          <div class="card-body my-img">
            <p class="card-text"><%= location.name %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>


<style type="text/css">
  @media screen and (max-width: 600px) {
    .jumbotron-fluid {
      margin-top: 80px;
    }
    .btn-info {
      width: 200px;
    }
}
</style>
