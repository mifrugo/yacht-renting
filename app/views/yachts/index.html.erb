  <h2 class="mt-3 mb-4">List of all Yachts available ⚓️ </h2>

  <div class="row">
  <div class="col-sm-8">
    <div class="card-columns text-center">
      <% @yachts.each do |yacht| %>
      <%= render 'card', locals: yacht %>
      <% end %>
    </div>
  </div>
  <div class="col-sm-4">
    <div class="index-map">
      <div style="height: 100vh" class="mb-2 position-relative">
        <div id="map" data-apikey="<%= ENV['MAPBOX_KEY'] %>" data-latitude="32.496365"
          data-longitude="41.902782" data-zoom="4" data-markers="<%= @markers.to_json %>" style="height: 100vh">
        </div>
      </div>
    </div>
  </div>
</div>

<% if policy(Yacht).new? %>
<%= link_to "Create new listing", yachts_new_path, class: "btn btn-primary" %>
<% end %>

<style>
#marker {
  background-image: url(<%= image_path 'yacht.svg' %>);
  background-size: cover;
  width: 50px;
  height: 50px;
  border-radius: 50%;
  cursor: pointer;
}
</style>
